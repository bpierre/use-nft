{
  "extends": "rollpkg/configs/tsconfig.json",
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ESNext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
